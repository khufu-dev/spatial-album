{
  "version": "1.0.0",
  "permissions": {
    "vite": {
      "read": true,
      "write": true,
      "env": true,
      "ffi": true,
      "sys": ["cpus", "homedir", "networkInterfaces", "hostname"],
      "net": ["localhost", "127.0.0.1:5173", "127.0.0.1:4173"],
      "run": true
    }
  },
  "tasks": {
    "clean": "rm -rf build dist node_modules",
    "dev": "deno run -P=vite npm:vite",
    "dev:avp": "XR_ENV=avp deno run -P=vite npm:vite",
    "avp": "deno run -P=vite npm:@webspatial/builder/webspatial-builder run --base=http://localhost:5173",
    "build": "deno run -P=vite npm:vite build && XR_ENV=avp deno run -P=vite npm:vite build",
    "build:avp": "deno task build && deno run -P=vite npm:@webspatial/builder/webspatial-builder build --base= --bundle-id=com.picoxr.spatialalbum --teamId=KQNC4RNTJN",
    "preview": "deno run -P=vite npm:vite preview",
    "publish": "deno run -P=vite npm:@webspatial/builder/webspatial-builder publish --base= --bundle-id=com.picoxr.spatialalbum --teamId=KQNC4RNTJN --version=1.0.0 --u=$(op read op://Private/Apple/username) --p=$(op read op://Private/Apple/spatial-album-password)"
  },
  "imports": {
    "@webspatial/builder": "npm:@webspatial/builder",
    "@webspatial/core-sdk": "npm:@webspatial/core-sdk",
    "@webspatial/platform-visionos": "npm:@webspatial/platform-visionos",
    "@webspatial/react-sdk": "npm:@webspatial/react-sdk",
    "@webspatial/vite-plugin": "npm:@webspatial/vite-plugin",
    "react": "npm:react",
    "react-dom": "npm:react-dom",
    "@types/react": "npm:@types/react",
    "vite": "npm:vite",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react",
    "vite-plugin-html": "npm:vite-plugin-html"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "deno.ns"],
    "types": ["react", "react-dom", "@types/react", "@types/node"],
    "jsx": "react-jsx",
    "jsxImportSource": "@webspatial/react-sdk"
  },
  "nodeModulesDir": "auto"
}
